@model IEnumerable<EdukateMvc.Models.Course>
@{
    ViewData["Title"] = "Courses";
    Layout = "_Layout";
}

<!-- Header (взято из вашей статики courses.html) -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h1 class="text-white display-1">Courses</h1>
        <div class="d-inline-flex text-white mb-5">
            <p class="m-0 text-uppercase"><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Courses</p>
        </div>
        <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
            <div class="input-group">
            </div>
        </div>
    </div>
</div>

<!-- Courses Listing -->
<div class="container-fluid pt-5 pb-3">
    <div class="container">
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="course-item bg-light shadow-sm rounded mb-4">
                        <div class="position-relative overflow-hidden">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@course.Id"
                                   class="btn btn-sm btn-primary px-3">View Detail</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            <h5 class="mb-4">@course.Title</h5>
                            <h6 class="text-primary mb-4">@course.Price.ToString("C")</h6>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-right py-2">
                                <i class="fa fa-user mr-2"></i>@course.InstructorName
                            </small>
                            <small class="flex-fill text-center py-2">
                                <i class="fa fa-star mr-2"></i>@course.Rating
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
